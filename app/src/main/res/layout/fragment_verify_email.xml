<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="24dp"
    tools:context=".view.fragment.VerifyEmailFragment">

    <ImageView
        android:id="@+id/icon_email_sent"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_dialog_email"
        app:tint="@color/button_cyan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_verify_title"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="16dp"
        android:contentDescription="Email Sent Icon"/>

    <TextView
        android:id="@+id/text_verify_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your Email"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/icon_email_sent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_verify_message"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_verify_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/text_verify_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_resend_email"
        android:layout_marginBottom="32dp"
        tools:text="We've sent a verification link to your email address:
user@example.com
Please check your inbox and click the link to activate your account."/>

    <Button
        android:id="@+id/button_resend_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resend Verification Email"
        android:backgroundTint="@color/button_cyan"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/text_verify_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_go_to_login"/>

    <TextView
        android:id="@+id/button_go_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textColor="@color/button_cyan"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/button_resend_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout> 